{
  "name": "new.jacobheric.com",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .js src --fix",
    "build": "NODE_ENV=production npm-run-all build:css build:html",
    "build:css": "postcss src/assets/style/pre.css -o src/_includes/style/style.css",
    "build:html": "eleventy",
    "watch": "NODE_ENV=dev npm-run-all --parallel watch:css watch:html",
    "watch:css": "postcss src/assets/style/pre.css -o src/assets/style/style.css --watch",
    "watch:html": "eleventy --serve --port=3000",
    "start": "npm run watch"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "sharp": "^0.30.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.0",
    "outdent": "^0.8.0",
    "autoprefixer": "^10.4.4",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.0.23",
    "npm-run-all": "^4.1.5",
    "elasticlunr": "^0.9.5",
    "striptags": "^3.2.0",
    "html-minifier": "^4.0.0",
    "pretty": "^2.0.0"
  }
}
