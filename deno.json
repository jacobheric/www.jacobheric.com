{
  "lock": false,
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "cli": "echo \"import '\\$fresh/src/dev/cli.ts'\" | deno run --unstable -A -",
    "manifest": "deno task cli manifest $(pwd)",
    "start": "deno run -A --watch=static/,routes/ --unstable-kv dev.ts",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A main.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update .",
    "deletePosts": "deno run -A --unstable-kv ./lib/posts/delete.ts",
    "loadPosts": "deno run -A --unstable-kv ./lib/posts/load.ts",
    "makePosts": "deno run -A --unstable-kv ./lib/posts/make.ts",
    "loadPictures": "deno run -A --unstable-kv ./lib/pictures/load.ts",
    "deletePictures": "deno run -A --unstable-kv ./lib/pictures/delete.ts",
    "resizePictures": "deno run -A --unstable-kv ./lib/pictures/resize.ts"
  },
  "lint": { "rules": { "tags": ["fresh", "recommended"] } },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "$fresh/": "https://deno.land/x/fresh@1.7.2/",
    "@/": "./",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
    "@std/dotenv": "jsr:@std/dotenv",
    "@std/encoding": "jsr:@std/encoding",
    "@std/front-matter": "jsr:@std/front-matter",
    "@std/path": "jsr:@std/path",
    "@std/fs": "jsr:@std/fs",
    "@std/cli": "jsr:@std/cli",
    "preact": "https://esm.sh/preact@10.22.0",
    "preact/": "https://esm.sh/preact@10.22.0/",
    "preact-render-to-string": "npm:preact-render-to-string@^6.4.2",
    "tailwindcss": "npm:tailwindcss@3.4.1",
    "tailwindcss/": "npm:/tailwindcss@3.4.1/",
    "tailwindcss/plugin": "npm:/tailwindcss@3.4.1/plugin.js"
  },
  "compilerOptions": { "jsx": "react-jsx", "jsxImportSource": "preact" },
  "nodeModulesDir": "auto",
  "deploy": {
    "project": "70d7d543-7da6-418b-a3bf-58f9c49c669b",
    "exclude": [
      "./static/image/posts",
      "./lib/pictures/resize.ts",
      "**/node_modules"
    ],
    "include": [],
    "entrypoint": "main.ts"
  }
}
